mode=`cat ./rotationmode`
numwacom=`xsetwacom --list | wc -l`
tp=0

if test 0 = $mode; then
    echo 1 > ./rotationmode
    rotatemode="cw"
    xr="right"

elif test 1 = $mode; then
    echo 2 > ./rotationmode
    rotatemode="half"
    xr="inverted"

elif test 2 = $mode; then
    echo 3 > ./rotationmode
    rotatemode="ccw"
    xr="left"

else
    echo 0 > ./rotationmode
    tp=1
    xr="normal"
    rotatemode="none"
fi

xrandr -o $xr
xinput -set-prop "TPPS/2 IBM TrackPoint" "Device Enabled" $tp

for ((i=1;i <=$numwacom; i++))
do
    id=`xsetwacom --list | head -n$i | tail -1 | grep -o 'id: [0-9]\+' | grep -o '[0-9]\+'`
    xsetwacom set $id rotate $rotatemode
done

